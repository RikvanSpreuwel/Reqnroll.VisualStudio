<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="Reqnroll.VisualStudio.UI.DeveroomResources">
	<Style x:Key="VsDialogButton" TargetType="{x:Type Button}">
		<Style.Setters>
			<Setter Property="Padding" Value="8,0,8,2" />
			<Setter Property="MinWidth" Value="75" />
			<Setter Property="Height" Value="23" />
			<Setter Property="Margin" Value="6,0,0,0" />
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="Background" Value="#ECECF0" />
			<Setter Property="BorderBrush" Value="#ACACAC" />
		</Style.Setters>
	</Style>
	<Style x:Key="VsWizardButton" TargetType="{x:Type Button}">
		<Style.Setters>
			<Setter Property="Padding" Value="13,5.5,13,5.5" />
			<Setter Property="MinWidth" Value="90" />
			<Setter Property="MinHeight" Value="28" />
			<Setter Property="Height" Value="23" />
			<Setter Property="Margin" Value="0,0,8,0" />
			<Setter Property="VerticalAlignment" Value="Bottom" />
			<Setter Property="HorizontalAlignment" Value="Right" />
			<Setter Property="Background" Value="#ECECF0" />
			<Setter Property="BorderBrush" Value="#ACACAC" />
		</Style.Setters>
	</Style>
	<Style x:Key="VsCloseButton" TargetType="{x:Type Button}">
		<Style.Setters>
			<!--<Setter Property="Foreground" Value="{DynamicResource {x:Static platformUi:EnvironmentColors.SystemButtonTextBrushKey}}" />-->
			<Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
			<Setter Property="IsTabStop" Value="False" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border
							Background="Transparent"
							BorderThickness="0"
							SnapsToDevicePixels="true">
							<ContentPresenter
								x:Name="contentPresenter"
								Margin="0"
								HorizontalAlignment="Center"
								VerticalAlignment="Center"
								Focusable="False"
								RecognizesAccessKey="True" />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style.Setters>
	</Style>
	<Style x:Key="VsDialogUpperPart" TargetType="{x:Type Border}">
		<Style.Setters>
			<Setter Property="Background" Value="#ECECF0" />
		</Style.Setters>
	</Style>
	<Style x:Key="VsDialogLowerPart" TargetType="{x:Type Border}">
		<Style.Setters>
			<Setter Property="Background" Value="#F5F5F5" />
		</Style.Setters>
	</Style>

	<SolidColorBrush x:Key="ThemedWindowBackgroundBrush" Color="#FFFBFBFB" />
	<SolidColorBrush x:Key="ThemedWindowButtonBrushKey" Color="#FFFBFBFB" />
	<SolidColorBrush x:Key="ThemedWindowPanelTextBrushKey" Color="Black" />
	<SolidColorBrush x:Key="ThemedWindowButtonGlyphBrushKey" Color="Black" />
	<SolidColorBrush x:Key="ThemedHeaderTextBrushKey" Color="Black" />
	<SolidColorBrush x:Key="ThemedWindowButtonHoverBrushKey" Color="LightGray" />
	<SolidColorBrush x:Key="ThemedWindowButtonHoverForegroundBrushKey" Color="Black" />
	<SolidColorBrush x:Key="ThemedWindowButtonHoverBorderBrushKey" Color="Black" />
	<SolidColorBrush x:Key="ThemedCloseWindowButtonHoverBrushKey" Color="LightCoral" />
	<SolidColorBrush x:Key="ThemedCloseWindowButtonHoverTextBrushKey" Color="White" />
	<Style x:Key="ThemedHeader" TargetType="{x:Type TextBlock}">
		<Style.Setters>
			<Setter Property="FontSize" Value="33.98" />
			<Setter Property="Margin" Value="0,0,0,4" />
		</Style.Setters>
	</Style>
	<Style x:Key="ThemedDialogLabel" TargetType="{x:Type Label}">
		<Style.Setters>
			<Setter Property="Foreground" Value="Black" />
		</Style.Setters>
	</Style>
	<Style x:Key="ThemedDialogCheckBox" TargetType="{x:Type CheckBox}">
		<Style.Setters>
			<Setter Property="Foreground" Value="Black" />
		</Style.Setters>
	</Style>
	<Style x:Key="ThemedDialogComboBox" TargetType="{x:Type ComboBox}">
		<Style.Setters>
			<Setter Property="Foreground" Value="Black" />
		</Style.Setters>
	</Style>
	<Style x:Key="ThemedDialogButton" TargetType="{x:Type Button}" BasedOn="{StaticResource VsWizardButton}">
		<Style.Setters>
			<Setter Property="MinWidth" Value="95" />
		</Style.Setters>
	</Style>
</ResourceDictionary>
