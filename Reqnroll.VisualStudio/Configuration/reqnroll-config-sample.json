{
  "$schema": "https://schemas.reqnroll.net/reqnroll-config-latest.json",

  "ide": {
    "reqnroll": {
      "isReqnrollProject": true,
      "traits": [
        "DesignTimeFeatureFileGeneration"
      ]
    },
    "editor": {
      "showStepCompletionAfterStepKeywords": true,
      "gherkinFormat": {
        "indentFeatureChildren": false,
        "indentRuleChildren": false,
        "indentSteps": true,
        "indentAndSteps": false,
        "indentDataTable": true,
        "indentDocString": true,
        "indentExamples": false,
        "indentExamplesTable": true,
        "tableCellPaddingSize": 1
      }
    }
  }
}
